namespace = 1834_additional_act


1834_additional_act.1 = {
	type = country_event
	placement = ROOT
	
	title = pedro.1.t
	desc = pedro.1.d
	flavor = pedro.1.f
	
	event_image = {
		video = "votp_monarch_holding_court"
	}

	on_created_soundeffect = "event:/SFX/UI/Alerts/event_appear"

	icon = "gfx/interface/icons/event_icons/event_portrait.dds"
	
	duration = 3
	
	trigger = {
        in_election_campaign = yes
        owner = { has_modifier = brz_regency }
	}

	immediate = {
        ig:ig_liberals = { # old regency
			save_scope_as = liberals_scope
		}
		ig:ig_conservatives = { # new regency
			save_scope_as = conservatives_scope
		}
        ig:ig_petty_bourgeoisie = { # new regency
			save_scope_as = burocrats_scope
            leader = {
				save_scope_as = araujo_lima_regent
			}
		}	
	}

	option = {
		name = pedro.1.a
		default_option = yes
		#custom_tooltip = {
		#	text = pedro_regency_party_tt
		#}
		ig:ig_conservatives = {
			add_modifier = {
				name = bpm_empowered_ig
				months = long_modifier_time
			}
		}
		ig:ig_petty_bourgeoisie = {
			add_modifier = {
				name = bpm_empowered_ig
				months = long_modifier_time
			}
		}
        if = {
			limit = { exists = py:conservative_party }
			py:conservative_party = {
				add_momentum = momentum_medium
			}				
		}
	}

    option = {
		name = pedro.1.a
		ig:ig_liberals = {
			add_modifier = {
				name = bpm_empowered_ig
				months = long_modifier_time
			}
		}
        ig:ig_landowners = {
			add_modifier = {
				name = bpm_empowered_ig
				months = long_modifier_time
			}
		}
        if = {
			limit = { exists = py:liberal_party }
			py:liberal_party = {
				add_momentum = momentum_medium
			}				
		}
	}
}